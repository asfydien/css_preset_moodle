// ====== QUIZ NAV======
//gaya tombol quiz navigator
.path-mod-quiz #mod_quiz_navblock .qnbutton .thispageholder {
    border: 0px solid!important;
    box-shadow: 0 0 2px 0px #555!important;
    border-radius: 3px!important;
}

//tebal border tombol no terlihat
.path-mod-quiz #mod_quiz_navblock .qnbutton.thispage .thispageholder {
    border-width: 1px!important;
    border-radius: 3px!important;
}

//warna tombol di jawab
.path-mod-quiz #mod_quiz_navblock .qnbutton.answersaved .trafficlight {
    background-color: #1177d1b0!important;
    border-radius: 30px!important;
    width: 14px!important;
    height: 14px!important;
    margin-left: 8px!important;
}

.path-mod-quiz #mod_quiz_navblock .qnbutton.flagged .thispageholder {
    background: none!important;
    background-color: #FFD80064!important;
}

// heading di atas tombol navigasi
.path-mod-quiz #mod_quiz_navblock h3.mod_quiz-section-heading {
    padding: .7em 0 0;
    margin: 0;
    clear: both;
    font-size: .9rem;
    font-style: italic;
    padding-bottom: 2px!important;
}

// tabel nilai hasil per siswa
